<div class="modal fade" id=<%= "regisApprovalModal#{registration.id}" %> tabindex="-1" role="dialog" aria-labelledby="regisApprovalModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id=<%= "regisApprovalModalLabel#{registration.id}" %>><%= registration.event.name %></h4>
      </div>

      <div class="modal-body">
        <%= registration.pending_hours %> hours pending for <%= registration.giver.username %>
      </div>

      <div class="modal-footer">
        <%= form_for [:manager, @charity, registration.event, registration], method: 'put' do |f| %>
          <%= f.submit :approve, class: "btn btn-primary" %>
        <% end %>

        <%= form_for [:manager, @charity, registration.event, registration], method: 'delete' do |f| %>
          <%= f.submit :deny, class: "btn btn-primary" %>
        <% end %>
      </div>

    </div>
  </div>
</div>






