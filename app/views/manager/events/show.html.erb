<h1>Manager Dashboard: Show <%=@event.name%> Event Page</h1>

<li>Starts: <%= @event.start %></li>
<li>Starts: <%= @event.end %></li>

<li>Description: <%= @event.description %></li>

<li><%= @event.givers_needed %> givers needed</li>

<div class="registered-volunteers">
  <h1>Givers Registered: </h1>

  <% if @givers.empty? %>
    no volunteers yet
  <% else %>
    <ul>
      <% @givers.each do |giver| %>
        <li> <%= giver.username %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div>
  <%= link_to '< back to events index', manager_charity_events_path(@charity) %>
</div>
