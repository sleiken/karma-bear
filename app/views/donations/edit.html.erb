<h1>Giver View: Update Donation for <%= @need.name %></h1>

<% if @errors %>
  <ul>
    <% @errors.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@charity, @need, @registration], method: 'put' do |f|%>
  <div>
    <%= f.label "How many will you give?" %>:
    <%= f.text_field :quantity_pending, value: @registration.quantity_pending %>
  </div>

  <%= f.submit %>
<%end%>
